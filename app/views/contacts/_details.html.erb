<%= turbo_frame_tag :contact_details do %>
  <div class="details">
    <h1><%= contact.full_name %></h1>
    <p><%= contact.email %></p>
    <p><%= contact.phone %></p>
    <p><%= contact.birthday %></p>
    <%= link_to edit_contact_path(contact) do %>
      <span class="sr-only">Edit</span>
      <i class="fas fa-edit"></i>
    <% end %>
    <%= link_to contact_path(contact), data: { turbo_method: :delete, turbo_confirm: 'are you sure', turbo_frame: '_top' } do %>
      <span class="sr-only">Delete</span>
      <i class="fas fa-trash"></i>
    <% end %>
  </div>
<% end %>
